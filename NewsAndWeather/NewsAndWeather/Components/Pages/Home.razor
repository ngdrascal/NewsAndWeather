@code
{
    private string _message = "Loading ...";
    private readonly List<WeatherData> _locations = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            foreach (var client in WeatherClientCollection.GetAll())
            {
                var data = await client.GetForecastsAsync();
                if (data != null)
                    _locations.Add(data);
            }
        }
        catch (Exception e)
        {
            Console.WriteLine(e.Message);
            _message = "Forecasts currently unavailable.";
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await SetActiveItem(0);
        }
    }

    private async Task SetActiveItem(int index)
    {
        await JSRuntime.InvokeVoidAsync("setActiveCarouselItem", "weatherCarousel", 0);
    }
}
