@page "/"
@using WeatherDataClients

@inject IWeatherClientCollection WeatherClientCollection
@inject IJSRuntime JSRuntime

<PageTitle>News and Weather</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-7">
            <Clock />
        </div>
        
        <div class="col-5">
            <div class="row">
                <div class="col-12">
                    @if (_locations.Count > 0)
                    {
                        <h4 class="text-center">@_locations[0].LocationName</h4>
                    }
                </div>
                <div class="col-6">
                    @if (_locations.Count > 0)
                    {
                        <CurrentConditions Conditions="@_locations[0].CurrentConditions" />
                    }
                </div>
                <div class="col-6">
                    <h1 class="text-center">78&deg;<span style="vertical-align: super; font-size: 16px;">F</span></h1>
                    <img src="https://openweathermap.org/img/wn/01d@2x.png" style="width: 75px; height: 75px;" />
                    <h4>clear sky</h4>
                </div>
            </div>
        </div>

        <div class="col-12">
            @* ReSharper disable once UnknownCssClass *@
            @if (_locations.Count > 0)
            {
                <div id="weatherCarousel" class="carousel carousel-dark slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @foreach (var loc in _locations)
                        {
                            <div class="carousel-item active">
                                <h5>@loc.LocationName</h5>
                                <div class="card-group">
                                    @foreach (var dailyForecast in loc.DailyForecasts.Take(6))
                                    {
                                        <DailyForecast Date="@dailyForecast.Date"
                                                       LowTemp="@dailyForecast.LowTemp"
                                                       HighTemp="@dailyForecast.HighTemp"
                                                       Description="@dailyForecast.Weather.Description"
                                                       Icon="@dailyForecast.Weather.Icon" />
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

